{
  "name": "nebulacp-monorepo",
  "version": "0.9.0",
  "private": true,
  "description": "NebulaCP - Modern Open-Source Control Panel & CMS",
  "repository": {
    "type": "git",
    "url": "https://github.com/rhcsolutions/nebulacp.git"
  },
  "license": "AGPL-3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev:backend": "npm run start:dev --workspace=@nebulacp/backend",
    "dev:frontend": "npm run dev --workspace=@nebulacp/frontend",
    "build:backend": "npm run build --workspace=@nebulacp/backend",
    "build:frontend": "npm run build --workspace=@nebulacp/frontend",
    "prisma:generate": "npm run prisma:generate --workspace=@nebulacp/backend",
    "prisma:migrate": "npm run prisma:migrate --workspace=@nebulacp/backend",
    "prisma:studio": "npm run prisma:studio --workspace=@nebulacp/backend"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
